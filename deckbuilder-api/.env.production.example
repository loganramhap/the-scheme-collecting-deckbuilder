# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (your production domain)
FRONTEND_URL=https://zauniteworkshop.com

# Gitea Configuration
GITEA_URL=http://gitea:3000
GITEA_ADMIN_TOKEN=your_production_gitea_admin_token_here

# Riot OAuth Configuration
RIOT_CLIENT_ID=your_production_riot_client_id
RIOT_CLIENT_SECRET=your_production_riot_client_secret
RIOT_REDIRECT_URI=https://zauniteworkshop.com/auth/callback
RIOT_AUTHORIZATION_URL=https://auth.riotgames.com/authorize
RIOT_TOKEN_URL=https://auth.riotgames.com/token
RIOT_USERINFO_URL=https://auth.riotgames.com/userinfo
RIOT_REVOKE_URL=https://auth.riotgames.com/revoke

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_access_key

# DynamoDB Tables
DYNAMODB_USERS_TABLE=deckbuilder-users-prod
DYNAMODB_SESSIONS_TABLE=deckbuilder-sessions-prod

# Session Configuration
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_production_session_secret_min_32_chars
SESSION_EXPIRY=86400

# Encryption Configuration
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_production_encryption_key_min_32_chars

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
